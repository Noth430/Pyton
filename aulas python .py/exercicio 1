import os 
os.system(" cls || clear")

#solicitar dados.
nome = input("\ndigite seu nome ")
idade = int(input("\ndigite sua idade "))
nota1 = int(input("\ndigite a primeira nota "))
nota2 = int(input("\ndigite a segunda nota "))
nota3 = int(input("\ndigite a terceira nota "))
