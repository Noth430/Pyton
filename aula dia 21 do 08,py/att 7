import os 
os.system("cls || clear")



dia = int(input("escola uma opão"))
match(dia):
     
     case 1:
        print("domingo (final de semana)")
     case 2:
        print("segunda (dia util)")
     case 3:
        print("terca feira ( dia ut)")
     case 4:
        print("quarta feira (dia util)")
     case 5:
        print("quinta feira (dia util)")
     case 6:
        print("sexta feira (dia util)")
     case 7:
        print("sabado (final de semana)")
     case __:
        print("opão invalida")   

        

       
   

