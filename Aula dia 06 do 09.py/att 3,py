import os 
os.system("cls || clear")

def contador_pares_impares():
    pares = 0
    impares = 0

    for i in range(6):
        numero = int(input("Digite um numero: "))  
        if numero % 2 == 0:
            pares += 1   
        else:
            impares += 1
    
    print(f"Quantidade pares: {pares}")
    print(f"quantiade impares: {impares}")
    
contador_pares_impares()
    